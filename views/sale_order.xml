    <template id="external_layout_din5008_inherit" inherit_id="l10n_din5008.external_layout_din5008">
        <xpath expr="//div[@class='information_block']/table" position="after">
            <table style="width: 100%;">
                <tr t-if="doc and doc.commitment_delivery_date">
                    <td>Delivery Date:</td>
                    <td t-esc="doc.commitment_delivery_date"/>
                </tr>
                <tr t-if="doc and doc.measurement_date">
                    <td>Aufmass Datum:</td>
                    <td t-esc="doc.measurement_date"/>
                </tr>
            </table>
        </xpath>
    </template>



    <!-- Sale Order Form View -->
    <record id="view_order_form_inherit" model="ir.ui.view">
        <field name="name">sale.order.form.inherit</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <!-- Add fields after Salesperson -->
            <xpath expr="//field[@name='user_id']" position="after">
                <field name="commitment_delivery_date" string="Delivery Date"/>
                <field name="measurement_date" string="Aufmass Datum"/>
            </xpath>

            <!-- Add fields before picking_policy -->
            <xpath expr="//field[@name='picking_policy']" position="before">
                <field name="commitment_delivery_date" string="Delivery Date" />
                <field name="measurement_date" string="Aufmass Datum"/>
            </xpath>
        </field>
    </record>

    <!--    readonly="state == 'cancel' or locked"-->

</odoo>